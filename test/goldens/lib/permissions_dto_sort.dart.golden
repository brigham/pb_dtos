import 'package:pb_dtos/pb/dto/dto.dart';
import 'package:pb_dtos/pb/dto/dto_sort.dart';
import 'permissions_dto.dart';
import 'users_dto_sort.dart';
import 'permissions_dto_sort.dart';
import 'roles_dto_sort.dart';
import 'follows_dto_sort.dart';
import 'friends_dto_sort.dart';
import 'blocks_dto_sort.dart';
import 'posts_dto_sort.dart';
import 'permissions_dto_expand.dart';

class PermissionsDtoSort<D extends Dto<D>>
    extends DtoSortBase<D, PermissionsDto> {
  PermissionsDtoSort() : super.root();

  PermissionsDtoSort.from(super.delegate);

  void call({bool desc = false}) {
    finish(desc);
  }

  void name({bool desc = false}) =>
      addField(PermissionsDtoFieldEnum.name_, desc);

  void id({bool desc = false}) => addField(PermissionsDtoFieldEnum.id, desc);

  RolesDtoSort<PermissionsDto> get rolesViaPermissions => RolesDtoSort.from(
    addRelation(PermissionsDtoExpandEnum.rolesViaPermissions),
  );
}
